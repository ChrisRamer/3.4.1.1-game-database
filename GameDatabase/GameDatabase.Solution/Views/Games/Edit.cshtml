@{
	Layout = "_Layout";
}

@model GameDatabase.Models.Game

<h2 id="title">Editing <b>@Html.DisplayFor(model => model.Name)</b></h2>

<hr />

@using (Html.BeginForm())
{
	@Html.HiddenFor(model => model.GameId)

	@Html.LabelFor(model => model.Name)
	<br>
	@Html.TextBoxFor(model => model.Name)
	<br><br>
	@Html.Label("Developer")
	<br>
	@Html.DropDownList("DeveloperId")
	<br><br>
	<input type="submit" value="Save" />
}

<hr />

<p>
	@Html.ActionLink("View all games", "Index")
	|
	@Html.ActionLink("Go to homepage", "Index", "Home")
</p>