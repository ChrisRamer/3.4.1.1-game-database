@{
	Layout = "_Layout";
}

@using GameDatabase.Models
@model List<GameDatabase.Models.Developer>

<h1 id="title">Developers</h1>

<hr />

@if (@Model.Count == 0)
{
	<p>No developers have been added yet.</p>
}

@foreach (Developer developer in Model)
{
	<li>@Html.ActionLink($"{developer.Name}", "Details", new { id = developer.DeveloperId })</li>
}

<hr />

<p>
	@Html.ActionLink("Add a new developer", "Create")
	|
	@Html.ActionLink("Go to homepage", "Index", "Home")
</p>